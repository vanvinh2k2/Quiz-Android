<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/user"
        android:orientation="horizontal"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:padding="@dimen/_8sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/id"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="@dimen/_18sdp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="What is the capital city of Brunei?"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp"
                android:textStyle="" />

            <TextView
                android:id="@+id/sentence_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="A. Beirut"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/sentence_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="B. Apia"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/sentence_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="C. Lilongwe"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/sentence_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="D. Bandar Seri Begawan"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Answer: D"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp"
                android:textStyle="italic" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/update"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center"
            android:layout_marginRight="0dp"
            android:background="@null"
            android:gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/ic_fix"
            android:text="10"
            android:textColor="@color/black"
            android:textSize="@dimen/_18sdp"
            app:tint="@color/black" />

        <ImageButton
            android:id="@+id/delete"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center"
            android:background="@null"
            android:gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/ic_delete"
            android:text="10"
            android:textColor="@color/black"
            android:textSize="@dimen/_18sdp"
            app:tint="@color/black" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>